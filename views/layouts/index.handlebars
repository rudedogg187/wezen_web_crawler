<!DOCTYPE html>
<html>
  <head>
  <!-- CSS files -->
  {{#each css}}
    <link href="/css/{{this}}" rel="stylesheet">
  {{/each}}
  <!-- End CSS files -->
  <title> 
    Crawler
  </title>
  <meta charset="utf-8">
  </head> 
<body>
  <!-- JS files -->
  {{#each js}}
    <script src="/js/{{this}}"></script>
  {{/each}}
  <!-- End JS files -->
  <!-- Nav bar Start -->
  {{#if user}}
    <img id="google-user-img" src="{{user.thumbNail}}">
    {{user.userName}}
  {{/if}}
  <nav class="nav-bar">
    <span class="nav-logo">
      <span class="logo-text">
        Wezen Web Crawler
      </span>
    </span>
    <span class="right nav-account">
    <ul>
      {{#if user}}
      <li><a id="logon-btn" class="btn" href="/auth/logout">Log Out</a></li>
      {{else}}
      <li><a id="logout-btn" class="btn" href="/auth/login">Log In</a></li>
      {{/if}}
    </ul>
  </nav> <!--
      <span id="login-btn" class="btn">
        Log In
      </span>
      <span>|</span>
      <span id="create-btn" class="btn">
        Create Account
      </span>
    </span> -->
  <!-- End Nav Bar --> 
   {{{body}}}
</body>

</html>
